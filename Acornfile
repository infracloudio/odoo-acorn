services: postgres: {
  image: "ghcr.io/acorn-io/postgres:v15.3-0"
  serviceArgs: {
    dbUser: "odoo"
  }
}

containers: {
  oodo: {
    image: "odoo:16"
    env: {
      "HOST": "@{services.postgres.address}"
      "USER": "@{services.postgres.secrets.admin.username}"
      "PASSWORD": "@{services.postgres.secrets.admin.password}"
    }
    dependsOn: ["postgres"]
    ports: publish: "8069/http"
  }
}
